{
  "info": {
    "name": "Mini Wallet Application API",
    "description": "GraphQL API for Mini Wallet Application with blockchain integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "walletId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.data && response.data.register) {",
                  "    pm.collectionVariables.set('token', response.data.register.token);",
                  "    pm.environment.set('token', response.data.register.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation Register($input: RegisterInput!) {\n  register(input: $input) {\n    user {\n      id\n      username\n      createdAt\n    }\n    token\n  }\n}",
                "variables": "{\n  \"input\": {\n    \"username\": \"testuser\",\n    \"password\": \"Password123!\"\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.data && response.data.login) {",
                  "    pm.collectionVariables.set('token', response.data.login.token);",
                  "    pm.environment.set('token', response.data.login.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation Login($input: LoginInput!) {\n  login(input: $input) {\n    user {\n      id\n      username\n      createdAt\n    }\n    token\n  }\n}",
                "variables": "{\n  \"input\": {\n    \"username\": \"testuser\",\n    \"password\": \"Password123!\"\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Me {\n  me {\n    id\n    username\n    createdAt\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Create Wallet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.data && response.data.createWallet) {",
                  "    pm.collectionVariables.set('walletId', response.data.createWallet.id);",
                  "    pm.environment.set('walletId', response.data.createWallet.id);",
                  "    console.log('IMPORTANT: Save your mnemonic phrase securely!');",
                  "    console.log('Mnemonic:', response.data.createWallet.mnemonic);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation CreateWallet($input: CreateWalletInput) {\n  createWallet(input: $input) {\n    id\n    userId\n    address\n    network\n    mnemonic\n    createdAt\n  }\n}",
                "variables": "{\n  \"input\": {\n    \"network\": \"sepolia\"\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Get All Wallets",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Wallets {\n  wallets {\n    id\n    userId\n    address\n    network\n    createdAt\n    updatedAt\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Get Wallet by ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Wallet($id: Int!) {\n  wallet(id: $id) {\n    id\n    userId\n    address\n    network\n    createdAt\n    updatedAt\n  }\n}",
                "variables": "{\n  \"id\": {{walletId}}\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Balance($walletId: Int!) {\n  balance(walletId: $walletId) {\n    walletId\n    address\n    network\n    wei\n    ether\n  }\n}",
                "variables": "{\n  \"walletId\": {{walletId}}\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Send Funds",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation SendFunds($input: SendFundsInput!) {\n  sendFunds(input: $input) {\n    transaction {\n      id\n      transactionHash\n      fromAddress\n      toAddress\n      amount\n      status\n      createdAt\n    }\n    hash\n    from\n    to\n    amount\n  }\n}",
                "variables": "{\n  \"input\": {\n    \"walletId\": {{walletId}},\n    \"toAddress\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\",\n    \"amount\": \"0.001\"\n  }\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Get Transaction History",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Transactions($walletId: Int!, $limit: Int, $offset: Int) {\n  transactions(walletId: $walletId, limit: $limit, offset: $offset) {\n    id\n    transactionHash\n    fromAddress\n    toAddress\n    amount\n    gasPrice\n    gasUsed\n    status\n    blockNumber\n    timestamp\n    createdAt\n  }\n}",
                "variables": "{\n  \"walletId\": {{walletId}},\n  \"limit\": 10,\n  \"offset\": 0\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Get Transaction by Hash",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "query Transaction($hash: String!) {\n  transaction(hash: $hash) {\n    id\n    transactionHash\n    fromAddress\n    toAddress\n    amount\n    gasPrice\n    gasUsed\n    status\n    blockNumber\n    timestamp\n    createdAt\n  }\n}",
                "variables": "{\n  \"hash\": \"0x...\"\n}"
              }
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
